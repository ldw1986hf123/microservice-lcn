<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ldw.microservice.dao.CurrencyConfigDao">
    <resultMap id="BannerConfig" type="com.ldw.microservice.entity.CurrencyConfig">
        <id property="id" column="id"/>
        <result property="language" column="language"/>
        <result property="currency" column="currency"/>
        <result property="key" column="key"/>
        <result property="value" column="value"/>
        <result property="created_time" column="createdTime"/>
        <result property="updated_time" column="updatedTime"/>
    </resultMap>

    <sql id="column">id, language,currency,key,value,created_time,updated_time</sql>


    <select id="getByCondition" resultMap="BannerConfig">
        select   id, language,currency,currency_config.key ,value,created_time,updated_time
        from currency_config
        <where>
            <if test="language != null">
                language = #{language}
            </if>
            <if test="currency != null">
                AND currency = #{currency}
            </if>
            <if test="key != null">
                AND currency_config.key = #{key}
            </if>
        </where>
    </select>


</mapper>