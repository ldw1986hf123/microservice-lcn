<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ldw.microservice.dao.BannerConfigDao">
    <resultMap id="BannerConfig" type="com.ldw.microservice.entity.BannerConfig">
        <id property="id" column="id"/>
        <result property="bannerName" column="banner_name"/>
        <result property="client_id" column="clientId"/>
        <result property="imageURL" column="img_url"/>
    </resultMap>

    <sql id="column">id, banner_name,client_id,img_url</sql>

    <select id="findById" resultType="BannerConfig" parameterType="java.lang.String">
        select
        <include refid="column"></include>
        FROM BANNER_CONFIG
        where id=#{id}
    </select>

    <insert id="addBannerConfig" parameterType="com.ldw.microservice.entity.BannerConfig">
        insert into banner_config(id,banner_name,client_id,img_url)
        values (
          #{id},#{bannerName},#{clientId},#{imageURL}
        )
    </insert>

    <select id="staticBannerClick"  resultType="com.ldw.microservice.service.vo.BannerClickVo">
      SELECT
        banner_name as bannerName,
        noted ,
        COUNT( 'noted' ) as clickCnt
      FROM
        banner_config bc,${tableName} ol
      WHERE ol.noted = bc.id
      GROUP BY ol.noted
    </select>


</mapper>